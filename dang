    "X = sm.add_constant(df['DIS'])\n",
    "y = df['MEDV']\n",
    "model = sm.OLS(y, X).fit()\n",
    "model.summary()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "4cd9ffc3",
   "metadata": {},
   "outputs": [],
